{{ form_start(map, {'method': "POST", 'action': path }) }}
    {{ form_row(map.name) }}
    {{ form_row(map.description) }}
    <div class="js-form-map-area">
        {{ form_row(map.areaType, {
            attr: {
                'data-map-area-url': path('app_map_terrain_select')
            }
        }) }}
    </div>

    <div class="js-map-terrain-specific-target">
        {{ form_row(map.terrainType, {
            attr: {
                'class': 'js-map-terrain-specific-target'
            }
        }) }}
    </div>

    {{ form_row(map.isClimateInfluenced, {
        attr: {
            'data-map-climate-influence-url': path('app_map_climate_influence_add'),
            'class': 'js-map-form-influence'
        }
    }) }}

    <div class="js-map-climate-influence-select-target">
        {% if map.climate is defined %}
            {{ form_row(map.climate) }}
        {% endif %}
    </div>

    {{ form_row(map.dangerousLevel) }}
    {{ form_row(map.noBattleZone) }}
    {{ form_row(map.noViolenceZone) }}
    {{ form_row(map.noMagicZone) }}
    {{ form_row(map.noEscapeZone) }}

    {{ form_row(map.image) }}

    <button class="btn btn-primary btn-block" type="submit" style="margin-top: 10px;">
        {{ button_text }}
    </button>
{{ form_end(map) }}